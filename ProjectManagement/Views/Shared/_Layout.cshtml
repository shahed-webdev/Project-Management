<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Font Awesome -->
    <link href="https://pro.fontawesome.com/releases/v5.8.2/css/all.css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MDB -->
    <link href="~/mdb/css/mdb-admin.min.css" rel="stylesheet" />
    <!-- Custom style -->
    <link href="~/css/public-master.css?v=1" rel="stylesheet" />

    <!-- Others page style -->
    @await RenderSectionAsync("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm top-bar">
            <div class="container">
                <ul class="nav navbar-nav nav-flex-icons ml-auto">
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </nav>
    </header>

    <main style="min-height:822px" class="mb-4">
        @RenderBody()
    </main>

    <footer class="page-footer font-small mt-4 footer-bg">
    </footer>


    <!-- JQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script src="~/mdb/js/mdb-admin.min.js"></script>
    <!-- axios -->
    <script src="~/lib/api.axios.min.js"></script>
    <!--notify js-->
    <script src="~/js/notify.min.js"></script>

    <!--others page js-->
    @await RenderSectionAsync("Scripts", false)

    <script>
        $(() => {
            new WOW().init();
        });

        //disable wheel in number type input
        document.addEventListener("wheel", () => {
            if (document.activeElement.type === "number")
                document.activeElement.blur();
        });
    </script>
</body>
</html>

