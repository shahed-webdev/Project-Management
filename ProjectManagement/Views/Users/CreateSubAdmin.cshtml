@model SubAdminRegisterViewModel
@{
    ViewData["Title"] = "Create Sub-Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <h4 class="page-header mt-3">Create Sub-Admin</h4>
    <p class="mb-3">@ViewBag.ProjectSector.Sector</p>

    <form asp-action="CreateSubAdmin">
        <div class="card card-body">
           
            <div class="row">
                <div class="col-lg-4">
                    <select asp-items="@ViewBag.UserType" name="Type" class="mdb-select md-form" required>
                        <option value="" disabled selected>Choose User Type</option>
                    </select>
                </div>
                <div class="col-lg-8">
                    <div class="md-form">
                        <label for="inputOutput">Project Sector</label>
                        <input value="@ViewBag.ProjectSector.Sector" type="text" class="form-control" disabled>
                        <input type="hidden" name="ProjectSectorId" value="@ViewBag.ProjectSector.ProjectSectorId">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="md-form">
                        <label for="inputName">Name</label>
                        <input id="inputName" name="Name" type="text" class="form-control" required>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="md-form">
                        <label for="inputPhone">Phone Number</label>
                        <input id="inputPhone" name="Phone" type="text" class="form-control">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="md-form">
                        <label for="inputEmail">Email</label>
                        <input id="inputEmail" name="Email" type="email" class="form-control">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="md-form">
                        <label asp-for="UserName">User Name</label>
                        <input asp-for="UserName" class="form-control" required>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="md-form">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="md-form">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="md-form">
                <label for="inputAddress">Address</label>
                <input id="inputAddress" name="Address" type="text" class="form-control">
            </div>
            <div class="text-right mt-4">
                <button type="submit" class="btn btn-custom-bg">Create Sub-admin</button>
                <div asp-validation-summary="All"></div>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <script>
        $(function () {
            $('.mdb-select').materialSelect();
        });
    </script>
}